<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="@dimen/size_8dp"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/tvTitlePromotion"
        fontPath="@string/font_HelveticaNeue_Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="SDasdasdasd"
        android:textColor="@color/color000000"
        android:textSize="@dimen/text_size_14sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="@dimen/size_4dp"
        android:id="@+id/tvTimeStart"
        fontPath="@string/font_HelveticaNeue_Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/size_10dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:text="asdasd "
        android:textColor="@color/color000000"
        android:textSize="@dimen/text_size_12sp" />

    <TextView
        android:layout_marginTop="@dimen/size_4dp"
        android:id="@+id/tvTimeEnd"
        fontPath="@string/font_HelveticaNeue_Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/size_10dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:text="asdasd "
        android:textColor="@color/color000000"
        android:textSize="@dimen/text_size_12sp" />

    <TextView
        android:layout_marginTop="@dimen/size_4dp"
        android:id="@+id/tvContent"
        fontPath="@string/font_HelveticaNeue_Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="asdasdas"
        android:textColor="@color/color000000"
        android:textSize="@dimen/text_size_14sp" />

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="@dimen/size_4dp"
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imgPromotion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/avt_product"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>
</LinearLayout>