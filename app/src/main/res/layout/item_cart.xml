<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/size_8dp"
    android:layout_height="@dimen/size_82dp">

    <CheckBox
        android:layout_centerVertical="true"
        android:id="@+id/ckb_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="@dimen/size_70dp"
        android:scaleType="centerCrop"
        android:id="@+id/imgItemCart"
        android:background="@drawable/border_image"
        android:layout_toRightOf="@+id/ckb_item"
        android:src="@drawable/avt_product"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_marginStart="@dimen/size_8dp"
        android:layout_toRightOf="@+id/imgItemCart"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvt_name_product"
            android:textColor="@color/color_black"
            android:layout_marginTop="@dimen/size_3dp"
            android:text="Vitamin C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvt_price_product"
            android:textColor="@color/colorFF8800"
            android:text="$1100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--        <com.travijuu.numberpicker.library.NumberPicker-->
        <!--            android:id="@+id/number_picker"-->
        <!--            android:layout_width="@dimen/size_130dp"-->
        <!--            android:layout_height="@dimen/size_40dp"-->
        <!--            numberpicker:min="1"-->
        <!--            numberpicker:unit="1"-->
        <!--            numberpicker:focusable="false" />-->


    </LinearLayout>

    <ImageView
        android:padding="@dimen/size_4dp"
        android:id="@+id/btn_delete"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_trash"
        android:layout_width="@dimen/size_25dp"
        android:layout_height="@dimen/size_25dp"
        android:layout_marginRight="@dimen/size_8dp" />

    <TextView
        android:id="@+id/tvt_amount_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SL: 2"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/imgItemCart"
        android:layout_marginRight="@dimen/size_20dp"
        android:layout_marginBottom="@dimen/size_20dp"
        android:visibility="gone" />
</RelativeLayout>