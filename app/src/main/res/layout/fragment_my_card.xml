<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginHorizontal="@dimen/size_16dp"
    android:layout_marginTop="@dimen/size_8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:textStyle="bold"
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thẻ đã liên kết" />

        <ImageView
            android:layout_marginTop="@dimen/size_16dp"
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_card" />

        <TextView
            android:textStyle="bold"
            android:layout_marginTop="@dimen/size_16dp"
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm thẻ mới" />

        <TextView
            android:gravity="center_vertical"
            android:background="@color/colorTextGray"
            android:layout_marginTop="@dimen/size_8dp"
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp"
            android:text="+ Thẻ nội địa" />

        <TextView
            android:gravity="center_vertical"
            android:background="@color/colorTextGray"
            android:layout_marginTop="@dimen/size_8dp"
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp"
            android:text="+ Thẻ quốc tế (Visa/Master)" />

        <TextView
            android:gravity="center_vertical"
            android:background="@color/colorTextGray"
            android:layout_marginTop="@dimen/size_8dp"
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp"
            android:text="+ Ví điện tử (Momo/VNpPay)" />
    </LinearLayout>
</ScrollView>