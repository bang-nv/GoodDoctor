<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:ignore="MissingPrefix">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/btnAddProduct">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:background="@drawable/product_default"
                android:id="@+id/sliderProduct"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_189dp" />

            <TextView
                android:id="@+id/tvServiceNameSVDT"
                android:textSize="@dimen/size_18dp"
                android:textStyle="bold"
                android:layout_marginHorizontal="@dimen/size_16dp"
                android:text="Vitamin C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/size_25dp"
                android:layout_marginTop="@dimen/size_15dp"
                android:layout_marginEnd="@dimen/size_25dp"
                android:layout_marginBottom="@dimen/size_15dp"
                android:background="@color/color000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/size_16dp"
                android:paddingEnd="@dimen/size_16dp">

                <TextView
                    android:id="@+id/tvLableType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/str_category"
                    android:textColor="@color/color000000"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Vitamin"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMadeFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:paddingStart="@dimen/size_16dp"
                android:paddingEnd="@dimen/size_16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_total_number"
                    android:textColor="@color/color000000"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textColor="@color/color35729F"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/tvMadeFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5dp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/size_16dp"
                android:paddingEnd="@dimen/size_16dp">

                <TextView
                    android:textColor="@color/color000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá bán: "
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.000.000đ"
                    android:textColor="@color/color35729F"
                    android:textSize="@dimen/text_size_14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWeight1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5dp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/size_16dp"
                android:paddingEnd="@dimen/size_16dp">

                <TextView
                    android:textColor="@color/color000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá khuyến mãi: "
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/tvPriceSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.400.000đ"
                    android:textColor="@color/colorCB0409"
                    android:textSize="@dimen/text_size_14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_16dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:ellipsize="end"
                android:text="Mô tả sẽ ở đây!"
                android:textSize="@dimen/text_size_14sp" />


            <RelativeLayout
                android:layout_marginHorizontal="@dimen/size_16dp"
                android:layout_marginTop="@dimen/size_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dịch vụ khác"
                    android:textColor="@color/color000000"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvShowAllSv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Xem tất cả"
                    android:textColor="@color/color35729F" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginHorizontal="@dimen/size_16dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:id="@+id/rcvServiceOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/item_product" />


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnScheduleService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_8dp"
        android:layout_marginTop="@dimen/size_5dp"
        android:layout_marginBottom="@dimen/size_5dp"
        android:background="@color/colorPrimary"
        android:text="Đặt lịch"
        android:textAllCaps="false"
        android:textColor="@color/colorFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />
</LinearLayout>
