<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_marginTop="@dimen/size_13dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginEnd="@dimen/size_12dp"
        android:src="@drawable/ic_logo"
        android:id="@+id/imgPromotionOther"
        android:layout_width="@dimen/size_84dp"
        android:layout_height="@dimen/size_60dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitlePromotionOther"
            android:text="Giảm 50%"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:drawableStart="@drawable/ic_time"
            android:id="@+id/tvTimePromotionOther"
            android:text="Áp dụng..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvContentOther"
            android:text="Just..."
            android:lines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>