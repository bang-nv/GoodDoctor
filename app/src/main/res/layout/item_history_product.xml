<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bkg_bottom_line"
    android:paddingVertical="@dimen/size_8dp">

    <ImageView
        android:id="@+id/ivItemImage"
        android:layout_width="@dimen/size_66dp"
        android:layout_height="@dimen/size_60dp"
        android:src="@drawable/ic_logo_splash"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8dp"
        android:layout_marginEnd="@dimen/size_5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color333333"
        android:textSize="@dimen/text_size_14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tvItemDateTime"
        app:layout_constraintStart_toEndOf="@id/ivItemImage"
        app:layout_constraintTop_toTopOf="@id/ivItemImage"
        tools:ignore="RtlSymmetry"
        tools:text="Vitamin C" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8dp"
        android:layout_marginTop="@dimen/size_2dp"
        android:paddingEnd="@dimen/size_5dp"
        android:textColor="@color/color333333"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintBottom_toTopOf="@id/tvStatus"
        app:layout_constraintEnd_toStartOf="@id/tvItemTotalMoney"
        app:layout_constraintStart_toEndOf="@id/ivItemImage"
        app:layout_constraintTop_toBottomOf="@id/tvItemName"
        tools:ignore="SpUsage"
        tools:text="Số lượng: 30 con" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8dp"
        android:layout_marginTop="@dimen/size_2dp"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintStart_toEndOf="@id/ivItemImage"
        app:layout_constraintTop_toBottomOf="@id/tvPhone"
        tools:ignore="SpUsage"
        tools:text="Đang xử lý" />

    <TextView

        android:id="@+id/tvItemDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8dp"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintBottom_toBottomOf="@id/tvItemName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvItemName"
        tools:ignore="SpUsage"
        tools:text="23-5-2020" />

    <TextView
        android:id="@+id/tvItemTitleTotalMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_total_money"
        android:textColor="@color/color333333"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintBottom_toBottomOf="@id/tvPhone"
        app:layout_constraintEnd_toStartOf="@id/tvItemTotalMoney"
        app:layout_constraintTop_toTopOf="@id/tvPhone"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/tvItemTotalMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/size_2dp"
        android:textColor="@color/colorF25F5C"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintBottom_toBottomOf="@id/tvPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPhone"
        tools:ignore="RtlSymmetry,SpUsage"
        tools:text="1000000" />


</androidx.constraintlayout.widget.ConstraintLayout>